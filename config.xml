<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.palotec.garconapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Garçonete Só de Cenoura</name>
    <description>
        App para uso das garçonetes dentro do restaurante.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>

    <preference name="Orientation" value="portrait"></preference>
    <preference name="Fullscreen" value="true"></preference>
    <preference name="BackgroundColor" value="0xf2f2f2ff"></preference>


    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res/screen/android/splash.png" density=""/>
        <splash src="res/screen/android/splash.png" density="port-hdpi"/>
        <splash src="res/screen/android/splash.png" density="port-ldpi"/>
        <splash src="res/screen/android/splash.png" density="port-mdpi"/>
        <splash src="res/screen/android/splash.png" density="port-xhdpi"/>
        <icon src="res/android/icon.png" density="xxxhdpi" />
    </platform>

    <platform name="ios">
        <preference name="DisallowOverscroll" value="true"></preference>
        <splash src="res/screen/ios/splash.png" width="768" height="1024"/>
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/ios/icon.png" width="180" height="180" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <preference name="SplashScreenDelay" value="1000" />

</widget>
